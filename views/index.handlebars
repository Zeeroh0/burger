<div class="contain">

  <div class="row">
    <!-- Burgers available to eat -->
    <div class="col sm">
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burger/burger-buttons devored=true}}             
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <!-- Pic, title, devour button, form/submit, and brief instructions -->
    <div class="col sm">
      <!-- <img src="/assets/images/buger.jpeg" alt="Yummy burgers!"> -->
      <h1>Eat-Da-Burger!</h1>
    </div>

    <!-- Burgers that have been eaten already -->
    <div class="col sm">
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burger/burger-buttons devored=false}}             
          {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>

</div>

